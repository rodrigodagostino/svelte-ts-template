{
  "bracketSpacing": true,
  "printWidth": 80,
  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": false,
  "plugins": ["prettier-plugin-svelte"],
  "pluginSearchDirs": ["."],
  "overrides": [
    {
      "files": ["*.json", "*.scss", "*.css"],
      "options": { "singleQuote": false }
    },
    { "files": "*.svelte", "options": { "parser": "svelte" } }
  ]
}
